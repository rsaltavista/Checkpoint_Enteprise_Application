@model CheckpointBlog.Models.Comentario

<h1>Adicionar Comentário</h1>

<form asp-action="Create" asp-route-postId="@ViewData["PostId"]">
    <div class="form-group">
        <label for="NomeAutor">Nome do Autor</label>
        <input asp-for="NomeAutor" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Conteudo">Conteúdo do Comentário</label>
        <textarea asp-for="Conteudo" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Salvar Comentário</button>
    </div>
</form>
